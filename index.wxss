.cashback-poster {
  position: fixed;
  display: block;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 502;
  transition: opacity 0.3s ease-in-out;
}

.cashback-poster-show {
  opacity: 1;
}

.cashback-poster .mask {
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
}
.cashback-poster .content {
    box-sizing: border-box;
    position: relative;
    display: block;
    width: 75%;
    top: 50%;
    transform: translateY(-50%);
    margin: 0 auto;
    border-radius: 16rpx;
}

.content .img {
   position: relative;
   display: block;
   margin-bottom: 20rpx;
}
.content .tip-wechat {
  position: relative;
  display: block;
  font-size: 36rpx;
  margin-top: 40rpx;
  color: #ffffff;
  text-align: center;
}
.content .arrow {
  display: inline-block;
  transform: rotate(90deg);
  font-size: 32rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
  vertical-align: middle;
  color: #fff;
  margin-left: 60rpx;
}
.text {
  color: #fff;
  font-size: 28rpx;
}
.canvas-poster{
  background-color: #fafafa;
  position: absolute;
  zoom: 50%;
  width: 100%;
  height: 100%;
  background: #206949;
  left: -10000rpx;
}
